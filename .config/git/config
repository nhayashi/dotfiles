[ghq]
	root = ~/code/src
[commit]
	verbose = true
[merge]
	ff = false
[pull]
	ff = only
[init]
	defaultBranch = main
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
# https://github.com/wellle/dotfiles/blob/master/gitconfig
[color]
	branch = auto
	diff = auto
	status = auto
	ui = always
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
